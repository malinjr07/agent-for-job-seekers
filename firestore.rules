rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Waitlist collection - allow writes, deny reads
    match /waitlist/{document} {
      // Allow create/write operations from client
      allow create: if true;
      
      // Deny all read operations to prevent data leaks
      allow read: if false;
      allow update, delete: if false;
    }
  }
}
